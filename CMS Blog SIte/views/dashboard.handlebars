{{!-- views/dashboard.handlebars --}}
{{#extends 'main'}}

{{#content 'body'}}
  <header>
    <h1>Dashboard</h1>
    <nav>
      <a href="/">Home</a>
      <a id="logout" href="#">Logout</a>
    </nav>
  </header>

  <section id="new-post">
    <h2>Create New Post</h2>
    <form class="new-post-form">
      <input type="text" id="post-title" name="title" placeholder="Post Title" required>
      <textarea id="post-content" name="content" placeholder="Post Content" required></textarea>
      <button type="submit">Create Post</button>
    </form>
  </section>

  <section id="my-posts">
    <h2>My Posts</h2>
    {{#each posts}}
      <article>
        <h3>{{this.title}}</h3>
        <p>{{this.content}}</p>
        <button class="edit-post" data-id="{{this.id}}">Edit</button>
        <button class="delete-post" data-id="{{this.id}}">Delete</button>
      </article>
    {{/each}}
  </section>

  <!-- Dashboard-specific scripts -->
  <script src="/js/create-post.js"></script>
  <script src="/js/edit-post.js"></script>
  <script src="/js/delete-post.js"></script>
{{/content}}

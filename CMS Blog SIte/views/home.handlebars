{{!-- views/home.handlebars --}}
{{!-- Extend the main layout --}}
{{#extends 'main'}}

{{!-- Define the content section --}}
{{#content 'body'}}
  <header>
    <h1>Homepage</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/dashboard">Dashboard</a>
      <a id="logout" href="#">Logout</a>
    </nav>
  </header>

  <section id="posts">
    {{#each posts}}
      <article>
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <small>{{this.created_at}}</small>
      </article>
    {{/each}}
  </section>
{{/content}}
